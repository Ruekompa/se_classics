<section class="section">
<div class="container">
	<div class="row">
		<div class="col s12">
		<h1><%= @vehicle.title.titleize %> <% if @vehicle.sold? %>
                    <span class="card-title sold">(SOLD)</span>
                    <% else %>
                    <% end %>  </h1>
		<div class="divider"></div>
	    </div>
	</div>
	<div class="row">
		<div class="col s12 m4">
        <ul class="collection with-header">
        <li class="collection-header"><h4>Vehicle Details</h4></li>
        <li class="collection-item"><strong>Make:</strong> <%= @vehicle.make %></li>
        <li class="collection-item"><strong>Model:</strong> <%= @vehicle.model %></li>
        <li class="collection-item"><strong>Year:</strong> <%= @vehicle.year %></li>
        </ul>
        </div>
        <div class="col s12 m6 offset-m2">
            <h3>Price</h3>
        	<p class="flow-text"><%= number_to_currency(@vehicle.price) %></p>
        </div>
  </div>
	<div class="row">
		<div class="col s12">
		<h3>Description</h3>
		<%= @vehicle.description.html_safe %>
	    </div>
	</div>
	<div class="row">
	  <div class="col s12">
		<h2 style="font-size: 3rem;">Photos</h2>
		<div class="divider"></div>
	  </div>
	</div>
	  <% unless @vehicle_photos.empty? %>
		<% @vehicle_photos.each_with_index.each_slice(3) do |image| %>
		<div class="row listing-photos">
		<% image.each do |g, index| %>
		<div class="col s12 m4 listing-photo">
         <%= image_tag(g.file_name.url, :class => "responsive-img materialboxed", :alt => "#{@vehicle.title.titleize} Photo #{index + 1}") %>      
        </div>
        <% end %>
        </div>
         <% end %>
         <% else %>
         <div class="row">
           <div class="col s12">
           	<h4>No Photos</h4>
           </div>
         </div>		
         <% end %>
	</div>
</section>
